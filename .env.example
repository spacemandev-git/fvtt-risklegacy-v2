# Server Configuration
NODE_ENV=development
PORT=8000

# Database (Prisma)
DATABASE_URL="postgresql://username:password@localhost:5432/risklegacy?schema=public"
# For development, you can also use SQLite:
# DATABASE_URL="file:./dev.db"

