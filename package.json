{
  "name": "risklegacy2",
  "module": "src/server/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/server/index.ts",
    "build": "bun build --target=bun --outdir=dist src/server/index.ts",
    "build:assets": "bun run scripts/convert-assets.ts",
    "start": "bun run dist/index.js",
    "convert-assets": "bun run scripts/convert-assets.ts",
    "db:generate": "bunx prisma generate",
    "db:migrate": "bunx prisma migrate dev",
    "db:migrate:prod": "bunx prisma migrate deploy",
    "db:seed": "bun run src/server/db/seed.ts",
    "db:studio": "bunx prisma studio",
    "db:reset": "bunx prisma migrate reset",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:game": "bun test tests/game",
    "test:e2e": "bun test tests/e2e",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9",
    "prisma": "^6.18.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.4",
    "@prisma/client": "^6.18.0",
    "bcrypt": "^5.1.1",
    "boardgame.io": "^0.50.2",
    "hono": "^3.12.0",
    "js-yaml": "^4.1.0",
    "winston": "^3.18.3",
    "zod": "^3.22.4"
  }
}